    - else
      &nbsp;
  #right.link
    - if options[:right]
      = link_to(image_tag("/images/icons/#{options[:right][:icon]}.png"), options[:right][:link])
      = link_to options[:right][:label], options[:right][:link], { :onclick => options[:right][:onclick] }
    - else
      &nbsp;
      
