- defaults = { :left => nil, :center => nil, :right => nil }
- options = defaults.merge(options)

#options
  #left.link
    - if options[:left]
      = link_to(image_tag("/images/icons/#{options[:left][:icon]}.png"), options[:left][:link])
      = link_to options[:left][:label], options[:left][:link], { :onclick => options[:left][:onclick] }
    - else
      &nbsp;
